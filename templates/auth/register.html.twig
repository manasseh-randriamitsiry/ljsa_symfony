{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="card-title text-center mb-5 fw-bold">Creation compte</h2>
                        {{ form_start(registrationForm) }}
                            <div class="form-floating mb-3">
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form_row(registrationForm.plainPassword)}}
                            </div>
                            <div class="form-check mb-3 ">
                                {{ form_row(registrationForm.agreeTerms) }}
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-success" type="submit">Creer mon compte</button>
                            </div>
                            <hr class="my-4">
                            <div class="d-grid mb-2">
                                <a class="btn btn-outline-secondary" href="{{ path('app_login') }}">J'ai un compte</a>
                            </div>
                            <div class="d-grid mx-auto mt-5 text-center">
                                <p>Made by manasseh ♥️</p>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
