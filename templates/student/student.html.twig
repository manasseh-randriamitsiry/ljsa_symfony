{% extends 'base.html.twig' %}
{% block title %}index{% endblock %}
{% block body %}
    {% if app.user %}
        <div class="mb-3">
            {{ app.user.email }} <a class="btn btn-outline-danger" href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    {% if app.user==null %}
{#        {{ render('') }}#}
    {% endif %}

    <div class="row">
        <div class="col-sm-9 col-md-7 mx-auto">
            <h5>nombre: {{ etudiants|length }}</h5>
            <a class="btn btn-outline-success mt-4" href="/etudiant/create" >create</a>
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <div>
                        <table class="table table-striped table-bordered" id="datatable" style="width:100%">
                            <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Prenom</th>
                                <th scope="col">Classe</th>
                                <th scope="col">Date Nais</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for etudiant in etudiants%}
                                <tr>
                                    <th scope="row">{{ etudiant.enom }}</th>
                                    <td>{{ etudiant.eprenom }}</td>
                                    <td>{{ etudiant.classe }}</td>
                                    <td>{{ etudiant.dateNais.format('d-m-Y') }}</td>
                                    <td>
                                        <a class="btn btn-outline-secondary " href="etudiant/view/{{ etudiant.id }}">view</a>
                                        <a class="btn btn-outline-primary " href="etudiant/update/{{ etudiant.id }}">Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
